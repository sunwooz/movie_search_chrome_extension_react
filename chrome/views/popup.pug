doctype html

html
  head
    meta(charset='UTF-8')
    title Redux TodoMVC Example (Popup)
    style.
      body { width: 500px; }
      .example-enter { opacity: 0.01; }
      .example-enter.example-enter-active { 
        opacity: 1;
        transition: opacity 1000ms ease-in;
      }
      .example-leave { opacity: 1; }
      .example-leave.example-leave-active {
        opacity: 0.01;
        transition: opacity 1000ms ease-in;
      }

  body
    #root
    if env !== 'prod'
      script(src='chrome-extension://lmhkpmbekcpmknklioeibfkpmmfibljd/js/redux-devtools-extension.js')
    script(src=env == 'prod' ? '/js/todoapp.bundle.js' : 'http://localhost:3000/js/todoapp.bundle.js')
